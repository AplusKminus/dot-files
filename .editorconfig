[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{puml, xml, json}]
indent_size = 2

[*.{yaml, yml}]
indent_size = 2
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.properties]
trim_trailing_whitespace = false
charset = latin1
